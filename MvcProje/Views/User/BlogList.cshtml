@model IEnumerable<EntitiyLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuhtorLayout.cshtml";
}
<link rel="stylesheet" href=" ~/miniblog/fonts/icomoon/StyleSheet5.css">
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Baslık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
        <th>BlogRating</th>

    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.BlogID</td>
    <td>@x.BlogTitle</td>
    <td>@x.Category.CategoryID</td>
    <td>@x.BlogDate.ToShortDateString()</td>
    <td><a href="/User/DeleteBlog/@x.BlogID" class="custom-btn btn-5" style="text-align:center">Sil</a></td>
    <td><a href="/User/UpdateBlog/@x.BlogID " class="custom-btn btn-6" style="text-align:center">Güncelle</a></td>
    <td><a href="/Blog/BlogDetails/@x.BlogID" class="custom-btn btn-7" style="text-align:center">Detaylar</a></td>
    <td><a href="/Blog/GetCommentByBlog/@x.BlogID" class="custom-btn btn-15" style="text-align:center">Yorumlar</a></td>
    <td>@x.BlogRating</td>





</tr>
    }
</table>
<a href="/User/AddNewBlog/" class="custom-btn btn-3" style="text-align:center">Yeni Blog Ekle</a>